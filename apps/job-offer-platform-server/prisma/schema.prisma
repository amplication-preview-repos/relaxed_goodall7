datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  companyDescription String?
  companyName        String?
  companyWebsite     String?
  createdAt          DateTime @default(now())
  description        String?
  id                 String   @id @default(cuid())
  jobListings        String?
  jobs               Job[]
  name               String?
  updatedAt          DateTime @updatedAt
  website            String?
}

model Job {
  applications Application[]
  company      Company?      @relation(fields: [companyId], references: [id])
  companyId    String?
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  location     String?
  salary       Float?
  title        String?
  updatedAt    DateTime      @updatedAt
}

model Application {
  appliedAt DateTime?
  createdAt DateTime               @default(now())
  id        String                 @id @default(cuid())
  job       Job?                   @relation(fields: [jobId], references: [id])
  jobId     String?
  status    EnumApplicationStatus?
  updatedAt DateTime               @updatedAt
  user      User?                  @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  applications Application[]
  appliedJobs  String?
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  password     String
  role         EnumUserRole?
  roles        Json
  updatedAt    DateTime      @updatedAt
  username     String        @unique
}

enum EnumApplicationStatus {
  Option1
}

enum EnumUserRole {
  Option1
}
